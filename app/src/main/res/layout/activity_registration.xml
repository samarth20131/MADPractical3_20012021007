<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="884dp"
        android:layout_marginBottom="50dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <ImageView
                android:id="@+id/img_guni"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/guni_pink_logo" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_marginHorizontal="20dp"
                app:cardElevation="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_margintop="10"
                        android:layout_marginLeft="10"
                        android:drawableRight="@drawable/ic_baseline_person_24"
                        android:text="User Full Name"
                        android:textSize="20"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10"
                        android:drawableRight="@drawable/ic_baseline_phone_android_24"
                        android:text="Phone Number"
                        android:textSize="20"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10"
                        android:drawableRight="@drawable/ic_baseline_location_city_24"
                        android:text="City"
                        android:textSize="20"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10"
                        android:drawableRight="@drawable/ic_baseline_email_24"
                        android:text="Email"
                        android:textSize="20"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10"
                        android:drawableRight="@drawable/ic_baseline_vpn_key_24"
                        android:text="Password"
                        android:textSize="20"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10"
                        android:drawableRight="@drawable/ic_baseline_vpn_key_24"
                        android:text="Confirm Password"
                        android:textSize="20"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>




        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <Button
        android:id="@+id/button"
        android:layout_width="130"
        android:layout_height="wrap_content"
        android:layout_margintop="450dp"
        android:layout_marginLeft="140dp"
        android:padding="10dp"
        android:text="Register"
        android:textSize="17"
        app:layout_anchor="@+id/mcv"
        app:layout_anchorGravity="bottom" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you have an account?"
        android:textSize="20dp"
        android:id="@+id/acc"
        android:layout_marginTop="610dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="20dp"
        android:id="@+id/acc"
        android:textStyle="bold"
        android:textColor="#DB3D91"
        android:layout_marginTop="610dp"
        android:layout_marginLeft="270dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>